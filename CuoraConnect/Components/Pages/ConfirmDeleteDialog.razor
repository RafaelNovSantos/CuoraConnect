@using MudBlazor
@using CuoraConnect.Models.ExportInfo

<DialogContent>
    <MudText>Você tem certeza que deseja excluir o servidor '@Server.Id'?</MudText>
</DialogContent>
<DialogActions>
    <MudButton OnClick="Close" Color="Color.Default">Cancelar</MudButton>
    <MudButton OnClick="ConfirmDelete" Color="Color.Error">Deletar</MudButton>
</DialogActions>

@code {
    [Parameter] public ExportInfo Server { get; set; } // Certifique-se de que o tipo é ExportInfo
    [CascadingParameter]
    private MudDialogInstance MudDialog { get; set; }

    private void Close() => MudDialog.Cancel();

    private void ConfirmDelete() => MudDialog.Close(DialogResult.Ok(Server.Id));

}
