        </MudTh>

        <MudTh>
            <MudTableSortLabel SortBy="new Func<ExportInfo, object>(e => e.Network_Name)" Style="@($"color:{MyCustomTheme.PaletteLight.TextSecondary};")">
                Rede Wi-Fi Configurada
