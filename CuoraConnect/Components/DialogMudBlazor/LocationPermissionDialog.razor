@inject INetworkService NetworkService

<MudDialog>
    <TitleContent>
        Permissão de Localização
    </TitleContent>
    <DialogContent>
        Você negou a permissão de localização, ela é necessária para buscar informações da rede, clique em Ok e permita a localização nas configurações do aplicativo.
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="Submit">Ok</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    private MudDialogInstance MudDialog
    {
        get; set;
    }

    private void Submit()
    {
        AppInfo.Current.ShowSettingsUI();
        MudDialog.Close(DialogResult.Ok(true));
    }  

    private void Cancel()
    {

        MudDialog.Cancel();
    }
    
}